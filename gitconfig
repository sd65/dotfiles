	email = sylvain.doignon@gmail.com
[color]
	diff = always
[alias]
        a = add
        c = commit
        p = push
        o = checkout
        s = status
        d = diff
        b = branch
        l = !git log --graph --pretty=format:'>>> %C(yellow)%s %Creset <<<%n%CblueHash: %H%n%CblueAuthor: %aN%n%CblueDate: %cd%n%CblueBody: %n%n' --date=relative
        ll = !git l --stat
        alias = !git config --list | awk '/alias/ {print substr($0,7)}'
[push]
        default = matching
